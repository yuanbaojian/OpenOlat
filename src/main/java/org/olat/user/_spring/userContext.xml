	<bean id="loginBlacklist" class="java.util.ArrayList">
		<constructor-arg index="0">
		<list>
			<!--
			Use regexp to define logins which are not allowed.
			All logins are matched lower-case, i.e to match
			both 'Admin5' and 'administrator' a regexp of '.*admin.*' would match
			-->
			<value>.*olat.*</value>
			<value>.*admin.*</value>
			<value>.*rektor.*</value>
			<value>.*prof.*</value>
			<value>.*assist.*</value>
			<value>.*tutor.*</value>
			<value>.*betreuer.*</value>
			<value>.*root.*</value>
			<value>.*support.*</value>
			<value>.*universit.*</value>
			<value>.*scheisse.*</value>
			<value>.*fuck.*</value>
			<value>.*shit.*</value>
			<value>.*kacke.*</value>
			<value>.*kotz.*</value>
			<value>.*geil.*</value>
			<value>.*bitch.*</value>
			<value>.*schlampe.*</value>
			<value>.*arsch.*</value>
			<value>.*info.*</value>
			<value>guest</value>
			<value>master</value>
			<value>elc</value>
			<value>mels</value>
			<value>eth</value>
			<value>help</value>
			<value>hilfe</value>
			<value>uniaccess</value>
			<value>beratung</value>
			<value>pmuster</value>
			<!-- Do not allow fancy login names that start or contain only special characters -->
			<value>[\.\-_].*</value>
			<value>[\.\-_]*</value>
		</list>
		</constructor-arg>
	</bean>

