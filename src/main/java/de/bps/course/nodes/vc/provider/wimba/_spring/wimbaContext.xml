<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:context="http://www.springframework.org/schema/context" 
	xsi:schemaLocation="
  http://www.springframework.org/schema/beans 
  http://www.springframework.org/schema/beans/spring-beans-3.0.xsd 
  http://www.springframework.org/schema/context 
  http://www.springframework.org/schema/context/spring-context-3.0.xsd">
  
  <bean id="wimbaDefaultConfig" class="de.bps.course.nodes.vc.provider.wimba.WimbaClassroomConfiguration">
  	<!-- general -->
  	<property name="createMeetingImmediately" value="true" />
  	<!-- Wimba specific -->
  	<property name="toolsToStudentsEnabled" value="true" />
  	<property name="studentsSpeakAllowed" value="true" />
  	<property name="studentsVideoAllowed" value="true" />
  	<property name="userStatusIndicatorsEnabled" value="true" />
  	<property name="userStatusUpdateInChatEnabled" value="true" />
  	<property name="studentEBoardEnabled" value="true" />
  	<property name="breakoutRoomsEnabled" value="true" />
  	<property name="archivingEnabled" value="true" />
  	<property name="autoOpenNewArchives" value="false" />
  	<property name="appshareEnabled" value="true" />
  	<property name="powerPointImportEnabled" value="true" />
  	<property name="guestAccessAllowed" value="false" />
  	<property name="regUsersAccessAllowed" value="false" />  	
	<property name="studentsChatAllowed" value="true" />
  	<property name="studentsPrivateChatAllowed" value="true" />
  </bean>
  
</beans>